<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:m="urn:import:net.foreverdeepak.gwt.sv.client">
	<ui:style>
		.card {
		    box-shadow:0 1px 2px #aaa;
		    background:white;
		    margin-right: 0.75em;
		    margin-bottom: 1em;
		    border-radius:0.5em;
		}
		
		.img-style {
		    border-top-left-radius: 0.5em;
		    border-top-right-radius: 0.5em;
		}
	</ui:style>
	
	<g:HTML>
		<section class="{style.card}">
			<a ui:field="adDetailUrl">
					<img class="{style.img-style}" ui:field="coverImage"></img>
			</a>
			<div>
				<span ui:field="title"/>
			</div>
			<div>
				<span ui:field="description"/>
			</div>
			<div>
				<span ui:field="companyTitle"/>
			</div>
		</section>
	</g:HTML>
</ui:UiBinder>